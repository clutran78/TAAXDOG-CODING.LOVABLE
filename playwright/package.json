{
  "name": "taaxdog-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for TAAXDOG finance application",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:auth": "playwright test auth.spec.ts",
    "test:dashboard": "playwright test dashboard.spec.ts",
    "test:goals": "playwright test goals.spec.ts",
    "test:transactions": "playwright test transactions.spec.ts",
    "test:journey": "playwright test user-journey.spec.ts",
    "test:visual": "playwright test --grep @visual",
    "test:performance": "playwright test --grep @performance",
    "test:a11y": "playwright test --grep @a11y",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep -invert @smoke",
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "trace": "playwright show-trace"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
