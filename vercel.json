{
  "buildCommand": "cd next-frontend && npm run build",
  "outputDirectory": "next-frontend/.next",
  "framework": "nextjs",
  "installCommand": "cd next-frontend && npm install",
  "devCommand": "cd next-frontend && npm run dev",
  "rootDirectory": "next-frontend",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/login",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 